        <Button
            android:id="@+id/btn_search_by_surname"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/by_surname" />

        <Button
            android:id="@+id/btn_search_by_voting_card"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/by_election_card" />

        <Button
            android:id="@+id/btn_search_by_age"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/by_age" />

        <Button
            android:id="@+id/btn_search_by_address"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/by_address" />


        <Button
            android:id="@+id/btn_search_by_booth"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/by_booth" />
    -->
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>