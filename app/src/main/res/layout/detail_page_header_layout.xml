<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_2dp"
        android:background="@drawable/detail_box_drawable"
        android:orientation="horizontal">

        <com.vijayyogapp.utils.CircularImageView
            android:id="@+id/profile_image"
            app:border_ci="true"
            app:border_color_ci="@color/colorPrimary"
            app:border_width_ci="@dimen/margin_2dp"
            app:shadow_ci="true"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="left|center"
            android:layout_margin="@dimen/margin_5dp"
            android:src="@drawable/voter_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/Voter_Label_Detail_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/serial_number" />

                <TextView android:id="@+id/txt_srno"
                    style="@style/Voter_Detail_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/Voter_Label_Detail_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/list_number" />

                <TextView android:id="@+id/txt_list_no"
                    style="@style/Voter_Detail_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="1" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>