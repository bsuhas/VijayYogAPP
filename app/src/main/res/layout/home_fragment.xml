<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:orientation="vertical">

                <com.vijayyogapp.utils.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="left|center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:src="@drawable/user"
                    app:border_ci="true"
                    app:border_color_ci="@color/md_white_1000"
                    app:border_width_ci="@dimen/margin_2dp"
                    app:shadow_ci="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Tap to change"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_profile_name"
                    style="@style/Header_Text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="" />

                <TextView
                    android:id="@+id/txt_mobile_number"
                    style="@style/Header_Text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="+91" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"
            android:orientation="vertical">

            <TextView
                style="@style/DashBoard_Text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/information"
                android:textColor="@color/md_red_800"
                android:textSize="@dimen/text_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="@string/msg_loksabha"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:id="@+id/txt_lok_id"
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="1"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="@string/msg_vidhan_sabha"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:id="@+id/txt_vidan_id"
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="1"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="@string/msg_ward_number"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:id="@+id/txt_ward_id"
                    style="@style/DashBoard_Text_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="0.5"
                    android:text="1"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_cover_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_10dp">

                <ImageView
                    android:id="@+id/img_party_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:padding="@dimen/margin_5dp"
                    android:src="@drawable/party_logo" />

                <Button
                    android:id="@+id/btn_search"
                    style="@style/Button_style"
                    android:layout_width="match_parent"
                    android:text="@string/drawer_search"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>