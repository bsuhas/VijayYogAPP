<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button_style">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_5dp</item>
        <item name="android:layout_height">@dimen/margin_50dp</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText_style">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_5dp</item>
        <item name="android:layout_height">@dimen/margin_50dp</item>
        <item name="android:background">@drawable/edit_box_drawable</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="DashBoard_Text_style">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>
    <style name="Header_Text_style">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

</resources>
